<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="InspectorGoe.GameStartPage"
               Color="Transparent"
               Size="700,450">

    <Frame BackgroundColor="LightBlue" CornerRadius="10">

        <StackLayout Padding="10">
            <Label Text="Start a new Game" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,10"/>


            <ImageButton Source="dotnet_bot.png" WidthRequest="80" HeightRequest="100" Margin="100"/>


            <Button Text="Start Game" Margin="10" Clicked="Button_Clicked"/>
        </StackLayout>
    </Frame>

</toolkit:Popup>