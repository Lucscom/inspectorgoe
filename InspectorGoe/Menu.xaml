<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InspectorGoe.Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.ColumnSpan="2" Grid.RowSpan="2" Source="maplogin.png" Aspect="AspectFill" VerticalOptions="StartAndExpand"/>

        <StackLayout
            Grid.Column="0"
            BackgroundColor="LightBlue"
            Opacity="0.8"
            HorizontalOptions="Start"
            WidthRequest="300">
            <Button Text="Spiel erstellen" Margin="10" Command="{Binding CreateNewGameCommand}"/>
            <Button Text="Spiel beitreten" Margin="10" Command="{Binding JoinGameCommand}"/>
        </StackLayout>
        <StackLayout VerticalOptions="End">
            <Button WidthRequest="280" Text="Tutorial" Margin="10" Command="{Binding TutorialCommand}"/>
            <Button WidthRequest="280" Text="LogOut" Margin="10" Command="{Binding LogOutCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>