<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InspectorGoe.Menu"
             Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackLayout
            Grid.Row="0"
            Grid.RowSpan="2"
            BackgroundColor="LightBlue"
            HorizontalOptions="Start"
            WidthRequest="300">
            <Button Text="Spiel erstellen" Margin="10" Clicked="Button_Clicked"/>
            <Button Text="Spiel beitreten" Margin="10" Clicked="Button_Clicked_1"/>
        </StackLayout>

    </Grid>
</ContentPage>