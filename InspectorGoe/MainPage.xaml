<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InspectorGoe.MainPage"
             xmlns:contentviews="clr-namespace:InspectorGoe.ContentViews"
             xmlns:viewModel="clr-namespace:InspectorGoe.ViewModels">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--Inhalt-->


        <ScrollView>
            <VerticalStackLayout Padding="10" BindableLayout.ItemsSource="{Binding MrXticketsCollection}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <ContentView>
                            <Frame CornerRadius="10"
                                   HeightRequest="80" 
                                   WidthRequest="150"
                                   BackgroundColor="black"
                                   Padding="5"
                                   HasShadow="True">

                                <Image Source="{Binding}" Aspect="AspectFit"/>

                            </Frame>

                        </ContentView>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>

        <ScrollView Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal">

            <HorizontalStackLayout BindableLayout.ItemsSource="{Binding DetectivesCollection}">
                
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <ContentView Padding="5">
                            <Frame CornerRadius="10"
                                   WidthRequest="350"
                                   HeightRequest="200"
                                   BackgroundColor="{StaticResource Gray600}"
                                   Padding="10"
                                   HasShadow="True">

                                <!--High level Grid-->
                                <Grid RowSpacing="6"
                                      ColumnSpacing="6">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="9*" />
                                        <RowDefinition Height="2*" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid RowSpacing="6"
                                          ColumnSpacing="6">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5*"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>


                                        <Frame BorderColor="DarkGray"
                                               HeightRequest="100"
                                               WidthRequest="100"
                                               CornerRadius="50"
                                               BackgroundColor="White"
                                               Padding="10"
                                               HasShadow="True">

                                            <Image Source="{Binding AvatarImagePath}" Aspect="AspectFit"/>
                                        </Frame>

                                        <Frame Grid.Row="1" CornerRadius="10" BackgroundColor="Purple" BorderColor="Purple" Padding="2"/>
                                    </Grid>


                                    <!--Sub Grid-->
                                    <Grid Grid.Column="1"
                                          RowSpacing="2"
                                          ColumnSpacing="6">

                                        <!--Grid Definition-->

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>

                                        <!--Ticket Bilder -->
                                        <Frame CornerRadius="5"
                                               BackgroundColor="{StaticResource Gray600}"
                                               BorderColor="{StaticResource Gray600 }"
                                               Padding="2"
                                               HasShadow="True">

                                            <Label Text="Bus Ticket:" TextColor="white" VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
                                        </Frame>

                                        <Frame Grid.Row="1"
                                               BackgroundColor="{StaticResource Gray600}"
                                               BorderColor="{StaticResource Gray600 }"
                                               CornerRadius="5"
                                               Padding="2">

                                            <Label Text="Bike Tickets:" TextColor="white" VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
                                        </Frame>

                                        <Frame Grid.Row="2"
                                               CornerRadius="5"
                                               BackgroundColor="{StaticResource Gray600}"
                                               BorderColor="{StaticResource Gray600 }"
                                               Padding="2">

                                            <Label Text="Scooter Tickets:" TextColor="white" VerticalTextAlignment="Center" HorizontalTextAlignment="End"/>
                                        </Frame>

                                        <!--Tickets-->

                                        <Frame Grid.Column="1"
                                               CornerRadius="10"
                                               BackgroundColor="{StaticResource Gray600}"
                                               Padding="2"
                                               HasShadow="True">

                                            <Label Text="{Binding BusTicket}" TextColor="{StaticResource Blue100Accent}" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Frame>

                                        <Frame Grid.Column="1"
                                               Grid.Row="1"
                                               CornerRadius="10" 
                                               BackgroundColor="{StaticResource Gray600}"
                                               Padding="2"
                                               HasShadow="True">

                                            <Label Grid.Row="1" Text="{Binding BikeTicket}" TextColor="{StaticResource Blue100Accent}" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center" />
                                        </Frame>

                                        <Frame Grid.Column="1"
                                               Grid.Row="2"
                                               CornerRadius="10"
                                               BackgroundColor="{StaticResource Gray600}"
                                               Padding="2"
                                               HasShadow="True">
                                            <Label Grid.Row="2" Text="{Binding ScooterTicket}" TextColor="{StaticResource Blue100Accent}" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
                                        </Frame>
                                    </Grid>

                                    <Frame Grid.Column="0"
                                           Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           CornerRadius="10"
                                           BackgroundColor="{StaticResource Blue100Accent}"
                                           Padding="2">
                                        <Label Text="{Binding Name}"
                                               TextColor="Black"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>

                                </Grid>
                            </Frame>
                        </ContentView>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </HorizontalStackLayout>
        </ScrollView>

        <Image Source="Ticket_2x.png" Grid.Row="1"/>


        <!--<CollectionView Grid.Row="1" 
                        Grid.Column="1"
                        ItemsSource="{Binding DetectivesCollection}"
                        ItemsLayout="HorizontalList">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <contentviews:PlayerCard/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>-->

    </Grid>

</ContentPage>
