<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InspectorGoe.MainPage"
             xmlns:contentviews="clr-namespace:InspectorGoe.ContentViews">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>

        <!--Inhalt-->

        <CollectionView 
            Grid.Row="0"
            Grid.Column="0"
            ItemsSource="{Binding MrXticketsCollection}"
            ItemsLayout="VerticalList">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <contentviews:MrX_Ticket/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



        <CollectionView 
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{Binding DetectivesCollection}"
            ItemsLayout="HorizontalList">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <contentviews:PlayerCard/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>

</ContentPage>
