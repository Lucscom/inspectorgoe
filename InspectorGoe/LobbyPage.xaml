<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="InspectorGoe.LobbyPage"
               Color="Transparent"
               Size="500,350"
               CanBeDismissedByTappingOutsideOfPopup="False"
               x:Name="ThisPopup">


    <Frame BackgroundColor="LightBlue" CornerRadius="10">

        <StackLayout Padding="10">
            <Label Text="Lobby" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,10"/>
            <StackLayout >
                <Label Text="Spieler 1"/>
                <Label Text="Spieler 2"/>
                <Label Text="Spieler 3"/>
                <Label Text="Spieler 4"/>
            </StackLayout>
            <Button x:Name="StartGame" Text="Start Game" Margin="10" Command="{Binding StartGameCommand}" CommandParameter="{x:Reference ThisPopup}"/>
        </StackLayout>
    </Frame>


</toolkit:Popup>