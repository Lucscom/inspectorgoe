<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InspectorGoe.ContentViews.MrX_Ticket"
             Padding="{OnPlatform 5, Android=0}">

    

    <Border StrokeThickness="4"
            Stroke="{Binding BorderColor}"
            StrokeShape="{OnPlatform Default='RoundRectangle 20,20,20,20', Android='RoundRectangle 10,10,10,10'}"
            Padding="0">


        <Frame HeightRequest="{OnPlatform 110, Android=55}" 
               WidthRequest="{OnPlatform 200, Android=100}"
               BackgroundColor="white"
               Padding="0">

            <AbsoluteLayout>

                <Image AbsoluteLayout.LayoutBounds="0,0,1,1"
                       AbsoluteLayout.LayoutFlags="All"
                       Source="{Binding ImagePath}" 
                       Aspect="Fill"/>

                <Label AbsoluteLayout.LayoutBounds="0,0,1,1"
                       AbsoluteLayout.LayoutFlags="All"
                       Text="{Binding NumberRound}"
                       TextColor="{Binding NumberColor}"
                       FontSize="{OnPlatform 40, Android=20}"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"/>
            </AbsoluteLayout>

    </Frame>



    </Border>







</ContentView>
