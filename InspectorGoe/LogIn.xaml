<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InspectorGoe.LogIn">
    
    <!--High level Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Grid.ColumnSpan="2" Source="maplogin.png" Aspect="AspectFill" VerticalOptions="StartAndExpand"/>

        <StackLayout
            Grid.Column="0"
            BackgroundColor="LightBlue"
            Opacity="0.8"
            HorizontalOptions="Start"
            WidthRequest="300">
            <Entry x:Name="EmailEntry" Placeholder="Enter your username" Margin="10" MaxLength="20" Text="{Binding Username}" ReturnCommand="{Binding Button_Clicked_LogInCommand}"/>
            <Entry x:Name="PasswordEntry" Placeholder="Enter your password" Margin="10" IsPassword="True" ReturnCommand="{Binding Button_Clicked_LogInCommand}" MaxLength="20" Text="{Binding Userpassword}"/>
            <HorizontalStackLayout>
                <Button x:Name="LogInButton" Text="Log In" Margin="10" WidthRequest="130" Command="{Binding Button_Clicked_LogInCommand}"/>
                <Button Text="Sign Up" Margin="10" WidthRequest="130" Command="{Binding Button_Clicked_RegisterCommand}"/>
            </HorizontalStackLayout>
        </StackLayout>

        <Entry
                Placeholder="Enter Server IP"
                x:Name="ServerEntry"
                MaxLength="40"
                BackgroundColor="LightBlue"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="End"
                WidthRequest="280"
                Margin="10"
                Text="{Binding Userseverip}"
                ReturnCommand="{Binding Button_Clicked_LogInCommand}"/>

    </Grid>
</ContentPage>