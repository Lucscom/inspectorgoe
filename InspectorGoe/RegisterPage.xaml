<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="InspectorGoe.RegisterPage"
               Color="Transparent"
               Size="500,350">

    <Frame BackgroundColor="LightBlue" CornerRadius="10">
        
        <StackLayout Padding="10">
            <Label Text="Sign Up" FontSize="20" HorizontalOptions="Center" Margin="0,0,0,10"/>
            <Entry Placeholder="Username" Margin="10" Text="{Binding Usernameregister}" TextChanged="RegisterActivation"/>
            <Entry Placeholder="Password" Margin="10" Text="{Binding Userpasswordregister}" TextChanged="RegisterActivation" IsPassword="True"/>
            <Entry Placeholder="Confirm Password" Margin="10" Text="{Binding Userpasswordregister2}" TextChanged="RegisterActivation" IsPassword="True"/>
            <Button x:Name="RegisterButton" Text="Register" Margin="10" Clicked="Button_Clicked_Register"/>
        </StackLayout>
    </Frame>

</toolkit:Popup>